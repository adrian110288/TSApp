<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/COLOR_WHITE"
    >

    <ImageView
        android:id="@+id/colorSquare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/squareContentDescription"
        />

    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@+id/colorSquare"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        />

    <TextView
        android:id="@+id/jobAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/jobTitle"
        android:layout_below="@+id/jobTitle"
        android:layout_toLeftOf="@+id/distance"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/jobTitle"
        android:textSize="12sp"
        android:text="DUE DATE"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jobAddress"
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
